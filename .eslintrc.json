{
  "root": true,
  "extends": [
    "wordpress",
    "plugin:@wordpress/eslint-plugin/recommended",
    "prettier"
  ],
  "env": {
    "browser": true,
    "es2021": true,
    "jquery": true,
    "node": false
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "script",
    "ecmaFeatures": {
      "jsx": false
    }
  },
  "globals": {
    "wp": "readonly",
    "jQuery": "readonly",
    "$": "readonly",
    "gsapWpAjax": "readonly",
    "ajaxurl": "readonly",
    "console": "readonly",
    "document": "readonly",
    "window": "readonly",
    "GSAP_WP_VERSION": "readonly",
    "GSAPAdmin": "writable"
  },
  "rules": {
    "indent": [
      "error",
      "tab",
      {
        "SwitchCase": 1
      }
    ],
    "linebreak-style": ["error", "unix"],
    "quotes": [
      "error",
      "single",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    "semi": ["error", "always"],
    "comma-dangle": ["error", "never"],
    "no-unused-vars": [
      "error",
      {
        "vars": "all",
        "args": "after-used",
        "ignoreRestSiblings": false,
        "argsIgnorePattern": "^_"
      }
    ],
    "no-console": [
      "warn",
      {
        "allow": ["warn", "error"]
      }
    ],
    "camelcase": [
      "error",
      {
        "properties": "never",
        "ignoreDestructuring": true,
        "ignoreImports": true
      }
    ],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "func-call-spacing": ["error", "never"],
    "array-bracket-spacing": ["error", "never"],
    "object-curly-spacing": ["error", "never"],
    "computed-property-spacing": ["error", "never"],
    "space-in-parens": ["error", "never"],
    "keyword-spacing": [
      "error",
      {
        "before": true,
        "after": true
      }
    ],
    "space-infix-ops": "error",
    "eqeqeq": ["error", "always"],
    "no-var": "warn",
    "prefer-const": "warn",
    "prefer-arrow-callback": "off",
    "no-param-reassign": [
      "error",
      {
        "props": false
      }
    ],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 2,
        "maxEOF": 1,
        "maxBOF": 0
      }
    ],
    "max-len": [
      "warn",
      {
        "code": 120,
        "tabWidth": 4,
        "ignoreUrls": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true,
        "ignoreRegExpLiterals": true,
        "ignoreComments": true
      }
    ],
    "jsdoc/require-jsdoc": [
      "warn",
      {
        "require": {
          "FunctionDeclaration": true,
          "MethodDefinition": true,
          "ClassDeclaration": true,
          "ArrowFunctionExpression": false,
          "FunctionExpression": false
        }
      }
    ],
    "jsdoc/require-description": "warn",
    "jsdoc/require-param-description": "warn",
    "jsdoc/require-returns-description": "warn",
    "yoda": ["error", "never"],
    "no-undef": "error",
    "no-redeclare": "error",
    "no-shadow": "error"
  },
  "overrides": [
    {
      "files": ["*.config.js", "gulpfile.js", "webpack.config.js"],
      "env": {
        "node": true,
        "browser": false
      }
    }
  ]
}
