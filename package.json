{
  "name": "gsap-for-wordpress",
  "version": "1.0.2",
  "description": "Complete GSAP integration with advanced admin interface, file editor, and version control for WordPress",
  "private": true,
  "author": {
    "name": "Zahid Aramai",
    "email": "hello@zahidaramai.com",
    "url": "https://zahidaramai.com"
  },
  "license": "GPL-2.0-or-later",
  "homepage": "https://zahidaramai.com/gsap-for-wordpress",
  "repository": {
    "type": "git",
    "url": "https://github.com/zahidaramai/gsap-for-wordpress.git"
  },
  "bugs": {
    "url": "https://github.com/zahidaramai/gsap-for-wordpress/issues"
  },
  "keywords": [
    "wordpress",
    "plugin",
    "gsap",
    "animation",
    "greensock",
    "scrolltrigger"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint 'admin/js/**/*.js' --max-warnings=0",
    "lint:css": "stylelint 'admin/css/**/*.css'",
    "fix": "npm run fix:js && npm run fix:css",
    "fix:js": "eslint 'admin/js/**/*.js' --fix",
    "fix:css": "stylelint 'admin/css/**/*.css' --fix",
    "format": "prettier --write '**/*.{js,css,json,md}'",
    "check-format": "prettier --check '**/*.{js,css,json,md}'",
    "validate": "npm run lint && npm run check-format",
    "prepare": "husky install || true",
    "pre-commit": "lint-staged"
  },
  "devDependencies": {
    "@wordpress/eslint-plugin": "^17.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-wordpress": "^2.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^48.0.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "stylelint": "^16.1.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-config-wordpress": "^17.0.0",
    "stylelint-order": "^6.0.4"
  },
  "lint-staged": {
    "*.php": [
      "composer phpcs"
    ],
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.css": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "browserslist": [
    "extends @wordpress/browserslist-config"
  ]
}
